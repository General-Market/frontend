# Frontend Environment Variables
# This file is synced from root .env via sync-env.sh
# All NEXT_PUBLIC_* variables are exposed to the browser

# Base Network RPC endpoint (exposed to browser for wallet connection)
NEXT_PUBLIC_BASE_RPC_URL=https://mainnet.base.org
NEXT_PUBLIC_BASE_RPC_FALLBACK_URL=https://base.llamarpc.com

# Smart contract addresses (Base mainnet - deployed 2026-01-23)
NEXT_PUBLIC_CONTRACT_ADDRESS=0xdbDD446F158cA403e70521497CC33E0A53205f74
NEXT_PUBLIC_RESOLUTION_CONTRACT_ADDRESS=0xed4F750fBdc860ECa19E7286452d61737D733f23

# Backend API URL (exposed to browser for data fetching)
NEXT_PUBLIC_BACKEND_URL=http://localhost:3001

# Curator API URL (backend for lending quotes / Morpho bundler)
NEXT_PUBLIC_CURATOR_API_URL=

# L3 RPC URL (Orbit L3 chain - used for direct L3 reads)
NEXT_PUBLIC_L3_RPC_URL=

# L3 block explorer URL (for transaction links)
NEXT_PUBLIC_L3_EXPLORER_URL=

# WalletConnect Project ID (required for WalletConnect integration)
NEXT_PUBLIC_WC_PROJECT_ID=your_walletconnect_project_id_here

# Chain ID (Base mainnet = 8453)
NEXT_PUBLIC_CHAIN_ID=8453
